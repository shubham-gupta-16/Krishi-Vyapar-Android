<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.main.MarketFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/background_search">

            <com.shubhamgupta16.materialkit.SearchView
                android:layout_marginTop="-5dp"
                android:layout_marginBottom="-5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:backButtonIcon="@drawable/ic_kit_search_24" />
        </FrameLayout>

        <com.shubhamgupta16.materialkit.RadioScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:showRadioButton="false"
            app:radioBackground="@drawable/kit_radio_round"
            app:radioHorizontalPadding="10dp"
            app:hideTitle="true"
            app:horizontalGap="8dp"
            android:entries="@array/filters"/>


    </LinearLayout>

</FrameLayout>